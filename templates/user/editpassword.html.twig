{% extends 'base.html.twig' %}

{% block title %}
    Nouveau mot de passe
{% endblock %}

{% block body %}
    <main class="bg-gray-50 dark:bg-gray-900 md:py-8">
        <section class="w-1/2 flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-0">
            <div class="bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md dark:bg-gray-800 dark:border-gray-700 py-2 px-6">
                <h1 class="text-3xl font-bold my-4">Modifier votre mot de passe</h1>

                {{ form_start(formPassword) }}
                {{ form_widget(formPassword) }}
                <input type="submit" value="Ajouter" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
                {{ form_end(formPassword) }}
            </div>
        </section>
    </main>
{% endblock %}

